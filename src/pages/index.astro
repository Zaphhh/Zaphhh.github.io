---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-[#F05138] to-[#512BD4] animate-gradient bg-[size:200%]">
    <div class="bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300">
      <h3 class="text-2xl font-bold bg-gradient-to-r from-[#F05138] to-[#512BD4] bg-clip-text text-transparent mb-4">Hi, I'm Zaph</h3>
      <p class="text-gray-600 mb-4">I build things</p>
    </div>
  </div>
</Layout>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient {
    animation: gradient 15s ease infinite;
  }
</style>